<h1> Articles </h1>

<h3> Unread Articles </h3>
<ul id="sortme" class="connectedSortable" style="min-height: 10px;">
  <% @unread_articles.each do |article| %>
    <li id="article_<%=article.id %>"><%= link_to "#{article.title}", article %></li>
  <% end %>
</ul>

<h3> Read Articles </h3>
<ul id="sortme2" class="connectedSortable" style="min-height: 10px;">
  <% @read_articles.each do |article| %>
    <li id="article_<%=article.id %>"><%= link_to "#{article.title}", article %></li>
  <% end %>
</ul>