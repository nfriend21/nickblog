<h1> <%= @article.title %> </h1>
<p>
  <i>Posted at: <%= @article.created_at %></i> &nbsp; <%= link_to "Edit", edit_article_path(@article) %>
</p>
<p>
  <%= @article.body %>
</p><br />

<h4> Tags </h4>
<p>
  <% @article.tags.each do |tag| %>
    <%= tag.name %><br/>
  <% end %>
</p>
<br />

<% if @comments.present? %>
<h3> Comments </h3>
  <% @comments.each do |comment| %>
    <p>
  	  <b>Name:</b> <%= comment.name %><br />
  	  <b>Comment:</b> <%= comment.body %><br />
  	  <i>Posted at: <%= comment.created_at %></i> &nbsp; <%= link_to "Delete", [@article, comment], method: :delete, data: { confirm: "Are you sure?" } %>
    </p>
<% end %> 
<% end %>
<br />

<h4> Post a New Comment <h4>
<p>
  <%= form_for [@article, @comment] do |c| %>

    <%= c.label :name %>
    <%= c.text_field :name %>

    <%= c.label :email %>
    <%= c.text_field :email %>

    <%= c.label :comment %>
    <%= c.text_area :body %><br />

    <%= c.submit "Post Comment", class: "btn btn-primary" %>

 <% end %>